@model DoctorSampleApp.Models.DoctorTable



@{
    ViewData["Title"] = "Edit";
}



<h1>Edit</h1>



<h4>Customer Details</h4>
<hr />



<div class="row">
    <div class="col-md-4 card">
        <form asp-action="Edit" asp-method="POST">




            <div>
                <p>
                    Doctor ID:<input disabled asp-for="@Model.DoctorId" />
                    <input hidden asp-for="@Model.DoctorId" />
                </p>
            </div>





            <div>
                <p>
                    Doctor Name <input asp-for="@Model.DoctorName" placeholder="Enter the Doctor Name" />
                </p>
            </div>





            <div>
                <p>
                    Doctor Departmenty<input asp-for="@Model.DoctorDept" placeholder="Enter the Department" />
                </p>
            </div>

            <div>
                <p>
                    Doctor Departmenty<input asp-for="@Model.DoctorQualification placeholder="Enter the Qualification" />
                </p>
            </div>



            <div>
                <p>
                    Doctor Fees <input asp-for="@Model.DoctorFees" />
                </p>
            </div>




            <div>
                <p>
                    Customer Photo <input asp-for="@Model.DoctorImage" />
                </p>
            </div>



            <button class="btn btn-danger">Submit</button>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}